<div id="location-contact-page">
  <div class="location-contact-header"
    {% if header.image is not empty %}
      style="background-image: url({{ header.image }})"
    {% endif %}
  >
    <h1 class="title">{{ header.title|raw }}</h1>
    <ul class="header-links">
      {% for link in header.links %}
        <li class="item">
          {{ link }}
        </li>
      {% endfor %}
    </ul>
    <div id="topsteps"></div>
  </div>

  <div class="breadcrumbs">
    {% for breadcrumb in breadcrumbs %}
      {{ breadcrumb }}
    {% endfor %}
  </div>

  <div id="search" class="search clearfix">
    <h2>{{ search.title|raw }}</h2>
    <div class="field--name-body">{{ search.text|raw }}</div>
    <div id="location-contact-search-form">
      {{ search.form }}
    </div>
  </div>

  {{ contacts }}

  <div id="" class="questions clearfix">
    <div class="image">
      {% if questions.image is not empty %}
        <img width="640" height="640" src="{{ questions.image }}" />
      {% endif %}
    </div>
    <div id="question" class="content">
      <h2>{{ questions.title|raw }}</h2>
      <div class="field--name-body">{{ questions.text|raw }}</div>
      <a href="#question-form" id="questions-read-more" class="read-more-link read-more-bw">{{ questions.button }}</a>
    </div>
  </div>

  <div id="question-form" class="questions clearfix" style="display: {{ question_form_status }}">
    <a href="#question-form" class="general-close-btn close-button">x</a>
    {{ question_form|raw }}
  </div>

  <div id="complaints" class="complaints clearfix">
    <div class="content">
      <h2>{{ complaints.title|raw }}</h2>
      <div class="field--name-body">{{ complaints.text|raw }}</div>
    </div>
    <div class="content">
      <h3>{{ complaints.subtitle|raw }}</h3>
      <ul class="files">
        {% for link in complaints.links %}
          <li>
            {{ link }}
          </li>
        {% endfor %}
      </ul>
      <a href="#complaints-form" id="complaints-read-more" class="read-more-link read-more-bw">{{ complaints.button }}</a>
    </div>
  </div>

  <div id="complaints-form" class="questions clearfix">
    <a href="#complaints-form" class="general-close-btn close-button">x</a>
    {{ complaint_form|raw }}
  </div>

  <div id="confidential" class="confidential clearfix">
    <div class="image">
      {% if consultants is not empty %}
        <div class="consultants-carousel owl-carousel">
          {% for consultant in consultants %}
            <div class="item">
              {% if consultant.image is not empty %}
                <img width="220" height="220" src="{{ consultant.image }}"/>
              {% endif %}
              {% if consultant.name is not empty %}
                <div class="consultants-name">{{ consultant.name }}</div>
              {% endif %}
              {% if consultant.phone is not empty %}
                <div class="consultants-phone">{{ consultant.phone }}</div><br>
              {% endif %}
              {% if consultant.email is not empty %}
                <div class="consultants-email"><a target="_blank" href="mailto:{{ consultant.email }}">{{ consultant.email }}</a></div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="content">
      <h2>{{ confidential.title|raw }}</h2>
      <div class="field--name-body">{{ confidential.text|raw }}</div>
    </div>
  </div>
</div>
